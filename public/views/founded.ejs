<%- contentFor('header') %>
<h1 class="page-title"><%= _locals.title %></h1>


<%- contentFor('body') %>
<div class="">
  <div class="col-12">
    <div class="row">
      <form action="/find" method="POST"
        class="col-10 col-md-8 col-lg-6 col-xl-4 d-flex flex-column justify-content-center align-items-center">
        <div class="d-flex flex-column form-wrapper w-100 align-items-end">
          <div class="text-white w-100">
            <h1>
              1.Copy
            </h1>
            <h1>
              2.Paste
            </h1>
            <h1>
              3.Listen offline
            </h1>
          </div>
          <input type="url" class="form-control form-control-lg border-0 shadow-sm rounded-pill" name="url"
            placeholder="Radiojavan url" aria-label="URL" aria-describedby="button-find">
          <div class="mt-3">
            <button class="btn btn-purple btn-lg rounded-pill shadow" type="submit" style="min-width: 120px"
              id="button-find">find</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="col-12 my-3">
  <div class="row">
    <% downloadLinks.forEach(function(downloadLink){ %>
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card border-0 shadow-sm mb-3" style="background-color: rgba(255, 240, 161, 0.7)">
        <div class="card-body">
          <div class="d-flex flex-column">
            <div class="media flex-fill">
              <div class="founded-crawler-image-wrapper mr-2"
                style="background-image: url('/static/images/icons/<%= downloadLink.type %>-solid-white.svg');">
                <img src="<%= downloadLink.cover %>"
                  class="founded-crawler-image align-self-center rounded shadow-sm mr-3"
                  alt="<%= downloadLink.title %>">
              </div>
              <div class="media-body text-truncate">
                <h5 class="text-truncate mt-0"><%= downloadLink.title %></h5>
                <%if (downloadLink.type == "album"){ %>
                <b>
                  <%= downloadLink.album %>
                </b>
                <%}%>
                <%if (downloadLink.quality){ %>
                <div>
                  <span class="badge badge-dark"><%= downloadLink.quality %></span>
                </div>
                <%}%>
              </div>
            </div>
            <div class="d-flex justify-content-end">
              <a href="<%= downloadLink.link %>" target="_blank" class="btn btn-outline-dark">Download</a>
              </div>
            </div>
          </div>
        </div>
      </div>


      <% }) %>
    </div>
  </div>